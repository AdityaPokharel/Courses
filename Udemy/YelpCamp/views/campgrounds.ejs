<% include partials/header.ejs %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrouds from all over Australia</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lrg">Add new campground</a>
            </p>
        </div>
    </header>


    <div class="row text-center" style="display:flex; flex-wrap: wrap"> <!-- TODO: Remove the style here. -->
        <% for (campground of campgrounds) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.image%>"  alt="campground">

                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>

            </div>
        <% } %>
    </div>



</div>


